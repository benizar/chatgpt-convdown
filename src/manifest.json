{
    "manifest_version": 2,
    "name": "ChatGPT ConvDown",
    "description": "Downloads the current thread from your conversation with ChatGPT as plain text.",
    "version": "2.0",
    "homepage_url": "https://github.com/esteinmann/chatgpt-convdown",
    
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    
    "content_scripts": [
    {
        "matches": ["*://chat.openai.com/chat"],
        "js": ["content.js"]
    }],
        
    "permissions": [
        "downloads",
        "activeTab",
        "scripting",
        "contextMenus"
    ]
}
